{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["sync", "^build"],
      "outputs": [".svelte-kit/**", ".vercel/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["sync", "^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["sync"]
    },
    "@smelterial/shared-config#lint": {
      "dependsOn": ["build"]
    },
    "format": {
      "dependsOn": ["sync"]
    },
    "check": {
      "dependsOn": ["sync"]
    },
    "sync": {
      "dependsOn": ["^build"]
    }
  }
}
