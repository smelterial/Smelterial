{
  "name": "@smelterial/smelterial",
  "version": "0.3.0",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./icon": {
      "default": "./dist/icon.js",
      "svelte": "./dist/icon.js",
      "types": "./dist/icon.d.ts"
    },
    "./icon/Icon.svelte": {
      "default": "./dist/icon/Icon.svelte.js",
      "svelte": "./dist/icon/Icon.svelte.js",
      "types": "./dist/icon/Icon.svelte.d.ts"
    },
    "./icon/showcase": {
      "default": "./dist/icon/showcase.js",
      "svelte": "./dist/icon/showcase.js",
      "types": "./dist/icon/showcase.d.ts"
    },
    "./theme": {
      "default": "./dist/theme.js",
      "svelte": "./dist/theme.js",
      "types": "./dist/theme.d.ts"
    },
    "./theme/showcase": {
      "default": "./dist/theme/showcase.js",
      "svelte": "./dist/theme/showcase.js",
      "types": "./dist/theme/showcase.d.ts"
    }
  },
  "scripts": {
    "postinstall": "pnpm generate",
    "generate": "NODE_NO_WARNINGS=1 node scripts/generate.js",
    "build": "pnpm generate && tsc",
    "lint": "prettier --check ."
  },
  "dependencies": {
    "@smelterial/you-icon": "workspace:^",
    "@smelterial/you-theme": "workspace:^"
  },
  "peerDependencies": {
    "svelte": "^3.59.1"
  },
  "devDependencies": {
    "@smelterial/shared-config": "workspace:^",
    "@types/node": "^20.2.5",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
